@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using eStore_WebMVC.Models
@model Product


<h1>Create New Product</h1>
<form asp-action="Create" asp-controller="Product" method="post">
    <div class="form-group row mt-3">
        <label for="title" class="col-sm-2 col-form-label">ProductName</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" asp-for="ProductName" id="title" placeholder="ProductName" required>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label for="type" class="col-sm-2 col-form-label">Weight</label>
        <div class="col-sm-5">
            <input type="number" class="form-control" asp-for="Weight" id="type" placeholder="Weight" required>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label for="type" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-5">
            <select name="categoryId" required>
                <option value=null>----All-----</option>
                @foreach (var item in (List<Category>)ViewBag.categories)
                {
                    if (item.CategoryId == ViewBag.categoryId)
                    {
                        <option value="@item.CategoryId" selected>@item.CategoryName</option>
                    }
                    else
                    {
                        <option value="@item.CategoryId">@item.CategoryName</option>
                    }
                }
            </select>
        </div>

    </div>
    <div class="form-group row mt-3">
        <label for="price" class="col-sm-2 col-form-label">UnitPrice</label>
        <div class="col-sm-5">
            <input type="number" class="form-control" asp-for="UnitPrice" id="price" placeholder="UnitPrice" required>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label for="advance" class="col-sm-2 col-form-label">UnitsInStock</label>
        <div class="col-sm-5">
            <input type="number" class="form-control" asp-for="UnitsInStock" id="advance" placeholder="UnitsInStock" required>
        </div>
    </div>
    <div class="form-group row mt-3">
        <div class="col-sm-5 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
