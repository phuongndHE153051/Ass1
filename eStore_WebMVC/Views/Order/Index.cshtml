@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using eStore_WebMVC.Models
@model List<Order>
<h1>Order Management</h1>

<a class="add" asp-action="Add" asp-controller="Order">Create</a>
<table border="1">
    <tr>
        <th>
            OrderID
        </th>
        <th>
            Member
        </th>
        <th>
            OrderDate
        </th>
        <th>RequiredDate</th>
        <th>
            ShippedDate
        </th>
        <th>
            Freight
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (Order order in Model)
    {
        <tr>

            <td>@order.OrderId</td>
            <td>@order.Member.Email</td>
            <td>@(order.OrderDate.ToString("dd/MM/yyyy"))</td>
            <td>@(order.RequiredDate?.ToString("dd/MM/yyyy"))</td>
            <td>@(order.ShippedDate.ToString("dd/MM/yyyy"))</td>
            <td>@order.Freight</td>
            <td>
                <a asp-action="Index" asp-controller="OrderDetail" asp-route-id="@order.OrderId">Details</a>
                <a asp-action="DeleteAsyn" asp-controller="Order" asp-route-id="@order.OrderId">Delete</a>
            </td>
        </tr>
    }



</table>
<style>
    table {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: #04AA6D;
        color: black;
    }

    .add {
        margin-top: 10px;
        padding: 10px;
        background-color: blue;
        color: white;
        text-decoration: none;
        margin-bottom: 10px;
        border-radius: 10px;
    }

    .search {
        padding: 5px;
        border-radius: 5px;
    }
</style>
